<button class="toggle-btn"><<</button>
<nav class="sidenav">
    <h1><a href="/">Home</a></h1>
    <ul id="myUL">
        <li><span class="caret">Games</span>
            <ul class="nested">
                <li><a href="/games/platformer/Platformer.html" target="_blank">2D</a></li>
                <li>Coffee</li>

            </ul>
        </li>
    </ul>
</nav>


<script>

    const COLLAPSE_WIDTH = 1080; // Make sure this matches the value above
    const toggleBtn = document.querySelector('.toggle-btn');
    const sidenav = document.querySelector('.sidenav');
    const main = document.querySelector('.main');

    // Check width when page loads
    document.addEventListener('DOMContentLoaded', checkWidth);

    var toggler = document.getElementsByClassName("caret");
    var i;

    for (i = 0; i < toggler.length; i++) {
        toggler[i].addEventListener("click", function() {
            this.parentElement.querySelector(".nested").classList.toggle("active");
            this.classList.toggle("caret-down");
        });
    }

    toggleBtn.addEventListener('click', () => {
        sidenav.classList.toggle('collapsed');
        toggleBtn.classList.toggle('collapsed');
        main.classList.toggle('collapsed');
    });

    function checkWidth() {
        const toggleBtn = document.querySelector('.toggle-btn');
        const sidenav = document.querySelector('.sidenav');
        const main = document.querySelector('.main');

        if (window.innerWidth < COLLAPSE_WIDTH) {
            sidenav.classList.add('collapsed');
            toggleBtn.classList.add('collapsed');
            main.classList.add('collapsed');
        }
    }

</script>